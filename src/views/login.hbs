<div class="d columns is-centered">
    <div class="column is-6">
        <h1 class="title">Login</h1>
        {{> error}}
        {{> warning}}
        {{> success}}
        <form action="/login" method="POST">
            <div class="field">
                <label class="label" for="name">Username:</label>
                <input id="name" name="username" class="input" type="text" placeholder="Username" value="{{username}}"
                    required>
            </div>
            <div class="field">
                <label for="password" class="label">Password:</label>
                <input id="password" class="input" name="password" type="password" placeholder="Password" required>
            </div>
            <div class="control">
                <button class="button is-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>

</div>