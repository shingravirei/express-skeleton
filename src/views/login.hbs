<div class="columns is-centered">
    <div class="column is-6">
        <h1 class="title">Login</h1>
        {{> error}}
        {{> warning}}
        <form action="/login" method="POST">
            <div class="field">
                <label class="label" for="name">Username:</label>
                <input id="name" name="username" class="input" type="text" placeholder="Username">
            </div>
            <div class="field">
                <label for="email" class="label">E-mail:</label>
                <input id="email" class="input" name="email" type="email" placeholder="E-mail">
            </div>
            <div class="field">
                <label for="password" class="label">Password:</label>
                <input id="password" class="input" name="password" type="password" placeholder="Password">
            </div>
            <div class="field">
                <label for="confirm-password" class="label">Confirm Password:</label>
                <input id="confirm-password" class="input" name="confirmPassword" type="password"
                    placeholder="Password">
            </div>
            <div class="control">
                <button class="button is-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>

</div>